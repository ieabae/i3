general {
        colors = true
# i recommend you change the colorcode below and coustomize it with your preferences
        color_good = "#BBBBBB"
        color_bad = "#CC1616"
        color_degraded = "#8fb5bc"
        interval = 1


}
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "cpu_temperature 1"
order += "cpu_usage"
order += "load"
order += "battery all"
order += "tztime local"
order += "volume master"
wireless _first_ {
        format_up = "Wifi: (%quality at %essid) %ip"
        format_down = "Wifi: down"
}
#you can enter/change anything inside the empty string("") in 'format_down'
# i set it empty so that it will only show up when connected :)
ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
                   status_full ="ðŸ”‹ FULL"
                   status_bat = "ðŸ”‹ BAT"
                   status_unk = "? UNK"
                   path = "/sys/class/power_supply/BAT%d/uevent"
                   low_threshold = 10

}

tztime local {
#you should enter your name/companyname inside the ** if you dont want to,you should backspace it. And keep the time and date format inside the string.
         format = "%d-%m-%Y  %I:%M:%S %p Abhay krishna"
}

disk "/" {
        format = "Space: %avail"
}
cpu_usage {
  format = "%usage"
}
#you can add more cpu. if you wish
#you should make sure your directory to cpu temp is right.
cpu_temperature 1 {
        format = "%degreesÂ°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
        max_threshold = 65
}
load {
  format = "%1min"
}
volume master {
#       format = " 'insert icon or text' %volume  " 
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        # termsyn font
        format = "ðŸ”Š %volume "
        format_muted = "ðŸ”Š Muted(%volume)"
}


